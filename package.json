{
    "name": "example-swagger-express-ts",
    "version": "0.0.6",
    "description": "",
    "main": "built/main.js",
    "scripts": {
        "clean": "echo \"Cleaning...\" && gulp clean",
        "build":
            "echo \"Building...\" && npm run clean && tsc -p tsconfig.json && echo \"Application is building in directory built.\"",
        "test": "echo \"Testing...\" && nyc mocha",
        "dev": "echo \"Developing...\" && nodemon",
        "start":
            "echo \"Starting application...\" && npm run build && node built/index.js"
    },
    "repository": {
        "type": "git",
        "url":
            "git+https://github.com/olivierlsc/example-swagger-express-ts.git"
    },
    "keywords": [
        "inversify",
        "inversifyjs",
        "swagger",
        "swagger2",
        "swagger-ui",
        "typescript",
        "expressjs",
        "express",
        "api rest",
        "documentation",
        "decorator",
        "generator",
        "swagger.json",
        "json",
        "rest"
    ],
    "author": "Olivier LIN-SI-CHENG",
    "license": "MIT",
    "homepage":
        "https://github.com/olivierlsc/example-swagger-express-ts.git#readme",
    "dependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/lodash": "^4.14.118",
        "body-parser": "^1.18.2",
        "inversify": "^5.0.1",
        "inversify-express-utils": "4.2.2",
        "lodash": "^4.17.11",
        "reflect-metadata": "^0.1.10",
        "swagger-express-ts": "^1.0.1",
        "swagger-ui-dist": "^4.1.3"
    },
    "devDependencies": {
        "@types/chai": "^4.1.3",
        "@types/mocha": "^2.2.48",
        "@types/sinon": "^4.3.3",
        "chai": "^4.1.2",
        "gulp": "^4.0.0",
        "gulp-clean": "^0.4.0",
        "husky": "^1.1.4",
        "mocha": "^4.0.1",
        "nodemon": "^1.18.4",
        "nyc": "^13.1.0",
        "prettier": "1.12.0",
        "pretty-quick": "^1.8.0",
        "rimraf": "^2.6.2",
        "sinon": "^4.5.0",
        "source-map-support": "^0.5.9",
        "ts-node": "^7.0.1",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^3.1.6"
    },
    "nyc": {
        "include": ["src/**/*.ts"],
        "exclude": ["src/index.ts"],
        "extension": [".ts"],
        "require": ["ts-node/register"],
        "reporter": ["html", "cobertura"],
        "sourceMap": true,
        "instrument": true
    },
    "nodemonConfig": {
        "restartable": "rs",
        "watch": ["src/**/*.ts"],
        "ext": "ts",
        "ignore": ["test/*", "wiki/*", "swagger/*", "node_modules/*", "dist/*"],
        "delay": "2500",
        "exec": "ts-node --project tsconfig.json src/index.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
